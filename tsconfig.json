{
  "compilerOptions": {
    "outDir": "./types/",
    "target": "ES2017",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}
